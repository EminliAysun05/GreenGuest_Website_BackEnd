@using GreenGuest_Web.Business.Dtos.CategoryItemDtos
@model CategoryItemUpdateDto

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Kateqoriyanı Yenilə</h4>

                    <form asp-action="Update" method="post" class="forms-sample">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Icon"></label>
                            <input asp-for="Icon" class="form-control" />
                            <span asp-validation-for="Icon" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ButtonPath"></label>
                            <input asp-for="ButtonPath" class="form-control" />
                            <span asp-validation-for="ButtonPath" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary me-2">Yadda saxla</button>
                        <a asp-action="Index" class="btn btn-light">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
